{
  "name": "@roots/bud-build",
  "description": "Bud webpack config build controller",
  "version": "0.0.0",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git",
    "directory": "sources/@roots/bud-build"
  },
  "contributors": [
    {
      "name": "kellymears",
      "url": "https://github.com/kellymears"
    },
    {
      "name": "QWp6t",
      "url": "https://github.com/QWp6t"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "keywords": [
    "bud",
    "bud-framework"
  ],
  "engines": {
    "node": ">=16"
  },
  "files": [
    "lib/",
    "types/"
  ],
  "type": "module",
  "module": "./lib/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./types/index.d.ts",
        "default": "./lib/index.js"
      }
    },
    "./item": {
      "import": {
        "types": "./types/Item/index.d.ts",
        "default": "./lib/Item/index.js"
      }
    },
    "./items": {
      "import": {
        "types": "./types/items.d.ts",
        "default": "./lib/items.js"
      }
    },
    "./loader": {
      "import": {
        "types": "./types/loader.d.ts",
        "default": "./lib/loader.js"
      }
    },
    "./loaders": {
      "import": {
        "types": "./types/loaders.d.ts",
        "default": "./lib/loaders.js"
      }
    },
    "./rule": {
      "import": {
        "types": "./types/Rule/index.d.ts",
        "default": "./lib/Rule/index.js"
      }
    },
    "./rules": {
      "import": {
        "types": "./types/rules.d.ts",
        "default": "./lib/rules.js"
      }
    }
  },
  "devDependencies": {
    "@skypack/package-check": "0.2.2",
    "@types/fs-extra": "9.0.13",
    "@types/lodash": "4.14.182",
    "@types/lodash-es": "^4",
    "@types/mini-css-extract-plugin": "2.5.0",
    "@types/node": "16.11.36",
    "webpack": "5.72.1"
  },
  "dependencies": {
    "@roots/bud-framework": "workspace:sources/@roots/bud-framework",
    "css-loader": "^6.5.1",
    "csv-loader": "^3.0.3",
    "file-loader": "^6.2.0",
    "fs-extra": "10.1.0",
    "helpful-decorators": "2.1.0",
    "html-loader": "^3.0.1",
    "js-yaml-loader": "1.2.2",
    "lodash-es": "4.17.21",
    "mini-css-extract-plugin": "^2.4.5",
    "remark": "14.0.2",
    "remark-html": "15.0.0",
    "remark-loader": "4.0.0",
    "resolve-url-loader": "5.0.0",
    "style-loader": "3.3.1",
    "tslib": "2.4.0",
    "url-loader": "4.1.1",
    "xml-loader": "1.2.1",
    "yml-loader": "2.1.0"
  }
}
